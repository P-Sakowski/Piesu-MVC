@model DogModel

<div id="success-alert" class="alert alert-success" style="display: none">Puppy added successfully</div>
<div id="failure-alert" class="alert alert-danger" style="display: none">Oops, something went wrong</div>

<form method="POST">
    <div class="form-group">
        <label asp-for="Name">Puppy's name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Tell us about your puppy!</label>
        <input asp-for="Description" class="form-control" />
    </div>
    
    @* TODO change to select when breed's list is available   *@
    <div class="form-group">
        <label asp-for="BreedId">Select your puppy's breed</label>
        <select asp-for="BreedId" asp-items="@ViewData["AvailableBreeds"] as List<SelectListItem>" class="form-control" name="Breed"></select>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Add new puppy!" />
    </div>
</form>

@section Scripts {
    <script src="~/js/addNewDog.js"></script>
}